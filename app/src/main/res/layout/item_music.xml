<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:padding="2dp"
    android:background="@drawable/fonmyitem"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:padding="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:src="@drawable/ic_baseline_music_note"
        android:id="@+id/my_musci_image"
        android:layout_width="70dp"
        android:layout_height="70dp"/>


    <TextView
        android:layout_marginStart="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/my_musci_image"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:id="@+id/my_actor_name"
        android:text="Act name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:scrollbarStyle="outsideInset"
        android:layout_marginStart="30dp"
        app:layout_constraintTop_toBottomOf="@id/my_actor_name"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/my_musci_image"
        android:id="@+id/my_music_name"
        android:text="Music name"
        android:textColor="@color/white"
        android:singleLine="true"
        android:marqueeRepeatLimit="marquee_forever"
        android:scrollHorizontally="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


</androidx.constraintlayout.widget.ConstraintLayout>